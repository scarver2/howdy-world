FROM rust:1.84-slim

# (Optional but useful) build deps some crates need
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Keep cargo caches in a predictable place (and mount it via compose)
ENV CARGO_HOME=/cargo
ENV PATH=/cargo/bin:/usr/local/cargo/bin:/usr/local/rustup/bin:$PATH

WORKDIR /app

# Install cargo-watch once into the image (or cache layer)
RUN cargo install cargo-watch --locked

EXPOSE 3000

# Watch only what matters; restart on change
CMD ["bash", "-lc", "cargo watch -w src -w Cargo.toml -x run"]
