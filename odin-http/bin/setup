#!/usr/bin/env bash
# odin-http/bin/setup

source "$(dirname "$0")/_lib.sh"

ROOT="$(endpoint_root)"
cd "$ROOT"

info "Howdy World / Odin endpoint setup"
log "Path: $ROOT"
log

require_brew
info "Homebrew OK: $(brew --version | head -n 1)"
log

submodules_init "$ROOT"

# Dependency presence check
[ -d "$ROOT/deps/odin-http" ] || die "Missing deps/odin-http (expected $ROOT/deps/odin-http)"

hr
info "Toolchain (best effort)"
print_tool_versions
hr

log "Next:"
log "  bin/build"
log "  ./server"
