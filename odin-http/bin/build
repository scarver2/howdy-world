#!/usr/bin/env bash
# odin-http/bin/build
set -euo pipefail
source "$(dirname "$0")/_lib.sh"

ROOT="$(endpoint_root)"
cd "$ROOT"

require_brew
require_cmd odin

odin build main.odin -file \
  -collection:deps=./vendor \
  -o:speed \
  -out:howdy-odin-http \
  "$@"

info "Built: $ROOT/howdy-odin-http"
