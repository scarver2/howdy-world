#!/usr/bin/env bash
# odin-http/bin/test

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$SCRIPT_DIR/.." && pwd)"

source "$SCRIPT_DIR/_lib.sh"

cd "$ROOT_DIR"

require_cmd odin

info "Running Odin tests..."

# Use same vendor collection logic as build
odin_with_deps test . \
  -collection:vendor=./vendor

success "Tests completed successfully"
