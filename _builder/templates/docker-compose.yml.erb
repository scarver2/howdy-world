services:
  nginx:
    # http://localhost
    image: nginx:alpine
    container_name: nginx-proxy
    ports:
      - "80:80"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/conf.d:/etc/nginx/conf.d:ro
      - ./nginx/www:/usr/share/nginx/html:ro
    depends_on:
    <%- config.each do |service_type, languages| -%>
    <%- languages.each do |language| -%>
      - <%= language[:service_name] %>
    <%- end -%>
    <%- end -%>

<%- config.each do |service_type, languages| %>
<%- languages.each do |language| %>
  <%= language[:service_name] %>:
    build: ./<%= language[:slug] %>
    container_name: <%= language[:service_name] %>
    environment:
      - PORT=<%= language[:port] %>
    expose:
      - "<%= language[:port] %>"
<%- end -%>
<%- end -%>