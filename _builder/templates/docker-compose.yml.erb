version: "3.9"

services:
<% languages.each do |lang| %>
  <%= lang[:name] %>:
    build: ./<%= lang[:name] %>
    container_name: <%= lang[:name] %>-app
    ports:
      - "<%= lang[:port] %>:<%= lang[:port] %>"
    environment:
      - PORT=<%= lang[:port] %>
    labels:
      - "service_type=<%= lang[:service_type] %>"
<% end %>

  nginx:
    image: nginx:alpine
    container_name: nginx-proxy
    ports:
      - "8080:80"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/conf.d:/etc/nginx/conf.d:ro
    depends_on:
<% languages.each do |lang| %>
      - <%= lang[:name] %>
<% end %>
