#!/usr/bin/env bash
# __ENDPOINT__/bin/stop
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ENDPOINT_DIR="$(cd "$SCRIPT_DIR/.." && pwd)"

if [[ -f "$ENDPOINT_DIR/../bin/_lib.sh" ]]; then
  source "$ENDPOINT_DIR/../bin/_lib.sh"
fi

cd "$ENDPOINT_DIR"

exec "$ENDPOINT_DIR/bin/down" "$@"
