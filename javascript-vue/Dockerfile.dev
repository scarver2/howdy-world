# javascript-vue/Dockerfile.dev
FROM alpine:3.20

RUN apk add --no-cache lighttpd ca-certificates \
  && mkdir -p /srv/javascript-vue /var/cache/lighttpd/compress \
  && chown -R lighttpd:lighttpd /srv/javascript-vue /var/cache/lighttpd/compress

COPY lighttpd.conf /etc/lighttpd/lighttpd.conf

EXPOSE 8080
CMD ["lighttpd", "-D", "-f", "/etc/lighttpd/lighttpd.conf"]
